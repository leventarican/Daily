<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutDescription="@xml/main_scene"
        tools:context=".MainV3">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:id="@+id/top"
                android:text="Daily"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/Brown50"
                android:background="@color/Brown700"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        <fragment android:name="leventarican.github.com.daily.panes.ProgressFragment"
                  android:id="@+id/progress"
                  android:layout_weight="5"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"/>

        <fragment
                android:name="leventarican.github.com.daily.panes.PomodoroFragment"
                android:id="@+id/pomodoro"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
    </LinearLayout>

    <!--<fragment android:name="leventarican.github.com.daily.panes.ProgressFragment"-->
    <!--android:id="@+id/progress"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp" />-->

    <!--<fragment-->
    <!--android:name="leventarican.github.com.daily.panes.PomodoroFragment"-->
    <!--android:id="@+id/pomodoro"-->
    <!--app:layout_constraintTop_toBottomOf="@id/progress"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"/>-->

    <leventarican.github.com.daily.utils.TouchFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>
