<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/Brown200">

    <TextView
            android:id="@+id/tv_pomodoro_title"
            android:textColor="@android:color/black"
            android:text="pomodoro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/tv_pomodoro_description"
            android:padding="5dp"
            android:text="pomodoro view"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pomodoro_title"
    />

    <leventarican.github.com.daily.Pomodoro
            android:id="@+id/pomodoroComponent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pomodoro_description"
    />

</androidx.constraintlayout.widget.ConstraintLayout>