<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:orientation="horizontal"
                  android:background="@color/Gray800"
    >
        <TextView android:id="@+id/txtTotal"
                  android:layout_height="match_parent"
                  android:layout_width="wrap_content"
                  android:text="Total: "
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:background="@color/Gray800"
                  android:textColor="@color/LightGreenA700"
                  android:textStyle="bold" android:textSize="20dp"/>
        <ImageView
                android:id="@+id/svg0"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_place"
                android:background="@color/Gray800"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/lin0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/Brown700"
            android:layout_marginTop="50dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:background="@color/Brown50"
                      android:id="@+id/element0"
        >
            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="set location"
                    android:onClick="setWorkLocation"
                    android:enabled="false"
                    android:clickable="false"
                    android:id="@+id/setLocation"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:padding="5dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:text="Change Radius [0 - 100m]"
                      android:textColor="#000000"
            />
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/seekBar"
                    android:progress="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:max="100"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:padding="5dp"
                      android:text="Distance to Location: "
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:id="@+id/txtDistanceToLocation"
                      android:textColor="#000000"
            />
            <TextView android:id="@+id/txtRadius"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:padding="5dp"
                      android:text="Radius: "
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textColor="#000000"
            />
            <leventarican.github.com.daily.Progress
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/Brown200"
                    app:progress_color="@color/LightGreenA200"
                    android:id="@+id/progress"
            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:layout_marginBottom="20dp"
                          android:orientation="vertical"
                          android:background="@color/Gray500">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:text="pomodoro 25 [min]"
                          android:textColor="#ffffff"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:background="@color/Gray800">
                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:text="start"
                            android:onClick="startPomodoro"/>
                    <leventarican.github.com.daily.Progress
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            app:progress_color="@color/Gray500"
                            android:id="@+id/pomodoro"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:layout_marginBottom="20dp"
                          android:orientation="vertical"
                          android:background="@color/RedA200">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:text="pomodoro view"
                          android:textColor="#ffffff"/>

                <leventarican.github.com.daily.Pomodoro
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/Gray800"
                android:text="Log"
                android:textColor="@color/LightGreenA700"
                android:fontFamily="monospace"
                android:gravity="center"
                android:onClick="logOnOff"
        />
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/Gray500"
                android:id="@+id/element1">
            <TextView
                    android:id="@+id/txtLog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/Gray100"
            />
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>